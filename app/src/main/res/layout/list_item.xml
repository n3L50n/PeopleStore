<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding">

    <LinearLayout
        android:id="@+id/list_item_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginStart="@dimen/list_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_first_name_text"
            style="@style/ListItemFirstNameStyle" />

        <TextView
            android:id="@+id/contact_last_name_text"
            style="@style/ListItemLastNameStyle" />

        <TextView
            android:id="@+id/zip_text"
            style="@style/ListItemZipStyle" />

    </LinearLayout>

</LinearLayout>