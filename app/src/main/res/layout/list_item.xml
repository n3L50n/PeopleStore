<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            tool:text="Magic: The Gathering Cards"
            android:id="@+id/product_name_text"
            android:textColor="@color/list_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tool:text="42"
            android:textColor="@color/list_item_product_quantity"
            android:id="@+id/product_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tool:text="$2.99"
            android:textColor="@color/list_item_product_price"
            android:id="@+id/product_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/mark_sold_button"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@color/transparent"
        android:text="@string/sale_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>