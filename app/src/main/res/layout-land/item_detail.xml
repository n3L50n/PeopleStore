<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/basic_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_contact_first_name_text_view"
            style="@style/EditContactNameStyle" />

        <EditText
            android:id="@+id/edit_contact_last_name_text_view"
            style="@style/EditContactNameStyle" />

        <EditText
            android:id="@+id/edit_zip_text_view"
            style="@style/EditZipStyle" />

        <EditText
            android:id="@+id/edit_number_text_view"
            style="@style/EditContactNumberStyle"/>

        <EditText
            android:id="@+id/edit_birth_text_view"
            style="@style/EditContactBirthStyle"/>

        <Button
            android:id="@+id/save_button"
            style="@style/SaveButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/product_image_view"
            android:layout_width="@dimen/image_button_width"
            android:layout_height="@dimen/image_button_height"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_item_fab"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/touch_image_margin"
            android:gravity="center"
            android:text="@string/add_image" />

        <Button
            android:id="@+id/delete_button"
            style="@style/ItemDetailDeleteButtonStyle"/>

    </LinearLayout>

</LinearLayout>