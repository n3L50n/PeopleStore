<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_marginRight">@dimen/basic_margin</item>
        <item name="android:layout_marginBottom">@dimen/basic_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/ic_add_item_fab</item>
    </style>

    <!--List Item Styles-->
    <style name="ListItemNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_product_name</item>
    </style>

    <style name="ListItemQuantityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_product_quantity</item>
    </style>

    <style name="ListItemPriceStyle">
        <item name="android:textColor">@color/list_item_product_price</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemSaleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/list_item_text_layout</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/list_item_margin</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:text">@string/mark_one_sold</item>
    </style>

    <!--Empty View Styles-->
    <style name="EmptyViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/empty_inventory_image</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/empty_text_title</item>
        <item name="android:textColor">@color/empty_title_color</item>
    </style>

    <style name="EmptyViewSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/empty_text_subtitle_padding_right</item>
        <item name="android:paddingLeft">@dimen/empty_text_subtitle_padding_left</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/empty_text_subtitle</item>
        <item name="android:textColor">@color/empty_subtitle_color</item>
        <item name="android:layout_below">@+id/empty_text_view</item>
    </style>

</resources>
