<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_marginRight">@dimen/basic_margin</item>
        <item name="android:layout_marginBottom">@dimen/basic_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/ic_add_item_fab</item>
    </style>

    <!--Contact Detail Styles-->
    <style name="EditContactNameStyle">
        <item name="android:hint">@string/enter_contact_first_name_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EditZipStyle">
        <item name="android:hint">@string/enter_contact_zip_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditContactNumberStyle">
        <item name="android:inputType">phone</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/enter_contact_number_hint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EditContactBirthStyle">
        <item name="android:inputType">text</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/enter_contact_birth</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SaveButtonStyle">
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:text">@string/save_button_text</item>
        <item name="android:textColor">@color/save_button_text_color</item>
        <item name="android:paddingLeft">@dimen/save_button_padding_left</item>
        <item name="android:paddingRight">@dimen/save_button_padding_right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/save_button_text_size</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TouchImageTextStyle">
        <item name="android:text">@string/add_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/touch_image_margin</item>
    </style>

    <style name="ItemDetailDeleteButtonStyle">
        <item name="android:text">@string/delete_button_text</item>
        <item name="android:textColor">@color/delete_button_text</item>
        <item name="android:textSize">@dimen/delete_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--List Item Styles-->
    <style name="ListItemFirstNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_contact_first_name</item>
    </style>

    <style name="ListItemLastNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_contact_last_name</item>
    </style>

    <style name="ListItemZipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_product_zip</item>
    </style>

    <!--Empty View Styles-->
    <style name="EmptyViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/empty_inventory_image</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/empty_text_title</item>
        <item name="android:textColor">@color/empty_title_color</item>
    </style>

    <style name="EmptyViewSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/empty_text_subtitle_padding_right</item>
        <item name="android:paddingLeft">@dimen/empty_text_subtitle_padding_left</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/empty_text_subtitle</item>
        <item name="android:textColor">@color/empty_subtitle_color</item>
        <item name="android:layout_below">@+id/empty_text_view</item>
    </style>

</resources>
